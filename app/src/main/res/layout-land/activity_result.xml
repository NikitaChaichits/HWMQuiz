<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bgresult"
    tools:context="com.myapp.lenovo.hwmquiz.Result">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorRes"
            app:titleTextColor="#A0522D"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passed"
        android:id="@+id/tv"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:id="@+id/tv4"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_below="@+id/tv"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/results"
        android:id="@+id/tv5"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/tv4"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_quiz"
        android:textColor="#A0522D"
        android:id="@+id/btnReset"
        android:background="@drawable/separator"
        android:layout_alignTop="@+id/btnExit"
        android:layout_alignStart="@+id/tv" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/exit_quiz"
        android:id="@+id/btnExit"
        android:textColor="#A0522D"
        android:background="@drawable/separator"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/tv"
        android:layout_marginBottom="40dp" />

</RelativeLayout>
